<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/static/stylesheets/users.css" />

<div
  class="section-container d-flex flex-column justify-content-center align-items-center"
>
  <div class="section-1 center flex-column">
    <img class="logo-img mb-1" src="/static/assets/logo.svg" />
    <div class="text intro">
      Hi Doctor... Say Hi to seamless exchange of consolidated referral
      information
    </div>
  </div>
  <div class="section-2 login-box center flex-column">
    <ul class="nav nav-pills mb-4">
      <li class="nav-item">
        <a class="nav-link nonactive text nobg" href="/sign-in">Login</a>
      </li>
      <li class="nav-item">
        <a class="nav-link text nobg active" aria-current="page" href="/sign-up"
          >Sign-up</a
        >
        <div class="underscore"></div>
      </li>
    </ul>
    <form
      id="login-form"
      action="/register"
      method="POST"
      class="validated-form d-flex flex-column"
      novalidate
    >
      <div class="mb-3">
        <input
          class="form-control input text"
          type="text"
          id="name"
          name="name"
          placeholder="Name"
          required
          autofocus
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <input
          class="form-control input text"
          type="text"
          id="institution"
          name="institution"
          placeholder="Institution"
          required
          autofocus
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <input
          class="form-control input text"
          type="email"
          id="login"
          name="login"
          placeholder="Email"
          required
          autofocus
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="mb-3">
        <input
          class="form-control input text"
          type="password"
          id="password"
          name="password"
          placeholder="Password"
          required
        />
        <div class="valid-feedback">Looks good!</div>
      </div>
      <button class="btn btn-success btn-block">Register</button>
    </form>
  </div>
</div>

<script src="https://www.gstatic.com/firebasejs/9.6.4/firebase-app-compat.js"></script>
<script src="https://www.gstatic.com/firebasejs/9.6.4/firebase-auth-compat.js"></script>

<script>
  window.onload = () => {
    const firebaseConfig = {
      apiKey: "AIzaSyCStvYOvOWSNQp4c9sUhZciF-TLYRplstg",
      authDomain: "milestone-1-ea86a.firebaseapp.com",
      projectId: "milestone-1-ea86a",
      storageBucket: "milestone-1-ea86a.appspot.com",
      messagingSenderId: "550924621635",
      appId: "1:550924621635:web:c24b86611fec3a3de201f6",
      measurementId: "G-377J7F5SWR",
    };

    const app = firebase.initializeApp(firebaseConfig);

    app.auth().setPersistence(firebase.auth.Auth.Persistence.NONE);

    document
      .getElementById("login-form")
      .addEventListener("submit", (event) => {
        event.preventDefault();
        const login = event.target.login.value;
        const password = event.target.password.value;
        const name = event.target.username.value;
        const institution = event.target.institution.value;

        app
          .auth()
          .createUserWithEmailAndPassword(login, password)
          .then(({ user }) => {
            return user.getIdToken().then((idToken) => {
              // Start a new session with the users ID token
              return fetch("/sessionLogin", {
                method: "POST",
                headers: {
                  Accept: "application/json",
                  "Content-Type": "application/json",
                },
                body: JSON.stringify({
                  idToken,
                  name,
                  institution,
                  signInType: "register",
                }),
              });
            });
          })
          .then(() => {
            return app.auth().signOut();
          })
          .then(() => {
            window.location.replace("/dashboard");
          })
          .catch((error) => {
            const errorCode = error.code;
            const errorMessage = error.message;
          });
        return false;
      });
  };
</script>
